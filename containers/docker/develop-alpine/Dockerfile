FROM alpine:3.7

RUN \
  apk add --update go git make gcc musl-dev linux-headers ca-certificates && \
  git clone --depth 1 https://github.com/xpaymentsorg/go-xpayments && \
  (cd go-xpayments && make gpay) && \
  cp go-xpayments/build/bin/gpay /gpay && \
  apk del go git make gcc musl-dev linux-headers && \
  rm -rf /go-xpayments && rm -rf /var/cache/apk/*

EXPOSE 8545
EXPOSE 30303

ENTRYPOINT ["/gpay"]
